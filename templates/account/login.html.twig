{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}

<div class="container">
    <div class="row">

        {% if hasError %}
            <div class="alert alert-danger">Une erreur est survenue</div>
        {% endif %}

        <div class="form">
            <form action="{{ path('account_login') }}" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="_username" class="form-control" placeholder="Adresse email.." value="{{ username }}">
                    <small class="form-text text-muted">Nous ne partagerons jamais votre e-mail avec quelqu'un d'autre.</small>
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" class="form-control" placeholder="Mot de passe..">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Connexion !</button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}
